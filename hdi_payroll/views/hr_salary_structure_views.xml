<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Salary Structure Views -->
    <record id="view_hr_salary_structure_list" model="ir.ui.view">
        <field name="name">Cấu trúc lương - List</field>
        <field name="model">hr.salary.structure</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_salary_structure_form" model="ir.ui.view">
        <field name="name">Cấu trúc lương - Form</field>
        <field name="model">hr.salary.structure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <separator string="Các rule tính lương"/>
                    <field name="rule_ids">
                        <list>
                            <field name="sequence"/>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="active"/>
                        </list>
                    </field>
                    <field name="notes" placeholder="Ghi chú..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_structure" model="ir.actions.act_window">
        <field name="name">Cấu trúc lương</field>
        <field name="res_model">hr.salary.structure</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
