<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Salary Structure Views -->
    <record id="view_hr_salary_structure_tree" model="ir.ui.view">
        <field name="name">Cấu trúc lương - Tree</field>
        <field name="model">hr.salary.structure</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_structure_form" model="ir.ui.view">
        <field name="name">Cấu trúc lương - Form</field>
        <field name="model">hr.salary.structure</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <separator string="Các rule tính lương"/>
                    <field name="rule_ids">
                        <tree>
                            <field name="sequence"/>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="active"/>
                        </tree>
                    </field>
                    <field name="notes" placeholder="Ghi chú..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_structure" model="ir.actions.act_window">
        <field name="name">Cấu trúc lương</field>
        <field name="res_model">hr.salary.structure</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
