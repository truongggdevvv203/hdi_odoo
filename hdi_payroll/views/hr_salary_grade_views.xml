<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Salary Grade Views -->
    <record id="view_hr_salary_grade_list" model="ir.ui.view">
        <field name="name">Hệ số lương - List</field>
        <field name="model">hr.salary.grade</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="job_id"/>
                <field name="level"/>
                <field name="base_salary"/>
                <field name="coefficient"/>
                <field name="allowance"/>
            </list>
        </field>
    </record>

    <record id="view_hr_salary_grade_form" model="ir.ui.view">
        <field name="name">Hệ số lương - Form</field>
        <field name="model">hr.salary.grade</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="job_id"/>
                            <field name="level"/>
                        </group>
                        <group>
                            <field name="base_salary"/>
                            <field name="coefficient"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="allowance"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Ghi chú..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_grade" model="ir.actions.act_window">
        <field name="name">Hệ số lương</field>
        <field name="res_model">hr.salary.grade</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
