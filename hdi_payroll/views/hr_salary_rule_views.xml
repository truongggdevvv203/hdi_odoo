<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Salary Rule Views -->
    <record id="view_hr_salary_rule_tree" model="ir.ui.view">
        <field name="name">Rule tính lương - Tree</field>
        <field name="model">hr.salary.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="code"/>
                <field name="name"/>
                <field name="category"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_rule_form" model="ir.ui.view">
        <field name="name">Rule tính lương - Form</field>
        <field name="model">hr.salary.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="structure_id"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Mô tả rule này..."/>
                    <separator string="Python Condition"/>
                    <field name="python_condition" widget="ace" options="{'mode': 'python'}"/>
                    <separator string="Python Compute"/>
                    <field name="python_compute" widget="ace" options="{'mode': 'python'}"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_rule" model="ir.actions.act_window">
        <field name="name">Rule tính lương</field>
        <field name="res_model">hr.salary.rule</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
