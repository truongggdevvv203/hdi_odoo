<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Payslip Views -->
    <record id="view_hr_payslip_list" model="ir.ui.view">
        <field name="name">Phiếu lương - List</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="worked_days"/>
                <field name="gross_salary"/>
                <field name="net_salary"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">Phiếu lương - Form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_compute" string="Tính lương" type="object" states="draft" class="btn-primary"/>
                    <button name="action_validate" string="Xác nhận" type="object" states="compute" class="btn-primary"/>
                    <button name="action_cancel" string="Hủy" type="object" states="draft,compute"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="employee_id"/>
                            <field name="salary_structure_id"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <separator string="Dữ liệu công việc"/>
                    <group>
                        <group>
                            <field name="worked_days"/>
                            <field name="paid_leave"/>
                        </group>
                        <group>
                            <field name="unpaid_leave"/>
                        </group>
                    </group>
                    <separator string="Hệ số lương"/>
                    <group>
                        <group>
                            <field name="base_salary"/>
                            <field name="coefficient"/>
                        </group>
                    </group>
                    <separator string="Chi tiết lương"/>
                    <field name="line_ids">
                        <list>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="amount"/>
                        </list>
                    </field>
                    <separator string="Tổng hợp"/>
                    <group>
                        <group>
                            <field name="gross_salary"/>
                        </group>
                        <group>
                            <field name="deduction_total"/>
                            <field name="net_salary" widget="monetary"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Ghi chú..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_payslip" model="ir.actions.act_window">
        <field name="name">Phiếu lương</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
