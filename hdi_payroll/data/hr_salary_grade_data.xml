<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Salary Grades -->
    <record id="salary_grade_dev_junior" model="hr.salary.grade">
        <field name="job_id" ref="hr.job_position_1"/>
        <field name="level">junior</field>
        <field name="base_salary">7000000</field>
        <field name="coefficient">1.0</field>
        <field name="allowance">500000</field>
    </record>

    <record id="salary_grade_dev_middle" model="hr.salary.grade">
        <field name="job_id" ref="hr.job_position_1"/>
        <field name="level">middle</field>
        <field name="base_salary">10000000</field>
        <field name="coefficient">1.2</field>
        <field name="allowance">1000000</field>
    </record>

    <record id="salary_grade_dev_senior" model="hr.salary.grade">
        <field name="job_id" ref="hr.job_position_1"/>
        <field name="level">senior</field>
        <field name="base_salary">15000000</field>
        <field name="coefficient">1.5</field>
        <field name="allowance">1500000</field>
    </record>

    <!-- Sequence for Payslip -->
    <record id="sequence_hr_payslip" model="ir.sequence">
        <field name="name">Payslip</field>
        <field name="code">hr.payslip</field>
        <field name="prefix">PS/%(year)s/%(month)02d/</field>
        <field name="number_next">1</field>
        <field name="company_id" ref="base.main_company"/>
    </record>
</odoo>
