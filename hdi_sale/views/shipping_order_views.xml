<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Shipping Order Form View -->
  <record id="view_shipping_order_form" model="ir.ui.view">
    <field name="name">shipping.order.form</field>
    <field name="model">shipping.order</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_submit_shipping" string="Gửi Hàng" type="object"
            class="oe_highlight" invisible="state != 'draft'"/>
          <button name="action_cancel" string="Hủy" type="object"
            invisible="state not in ['draft', 'sent']"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" readonly="1"/>
            </h1>
          </div>

          <group string="Thông tin người gửi" name="sender_group">
            <group>
              <field name="sender_street" placeholder="Nhập địa chỉ gửi" required="1"/>
            </group>
          </group>

          <group string="Thông tin người nhận" name="receiver_group">
            <group>
              <field name="receiver_phone"
                placeholder="Nhập số điện thoại"
                required="1"/>

              <field name="receiver_name"
                placeholder="Nhập tên người nhận"
                required="1"/>

              <field name="receiver_district"
                placeholder="Quận/Huyện"
                required="1"/>

              <field name="receiver_ward"
                placeholder="Phường/Xã"
                required="1"/>
            </group>

            <group>
              <field name="receiver_house_number"
                placeholder="Số nhà"
                required="1"/>

              <field name="receiver_street"
                placeholder="Tên đường"
                required="1"/>

              <field name="receiver_city"
                placeholder="Tỉnh/Thành phố"
                required="1"/>

              <field name="delivery_time_slot"/>
            </group>
          </group>

          <group string="Thông tin hàng hóa" name="goods_group">
            <group>
              <field name="goods_description" placeholder="Nội dung hàng hóa"/>
              <field name="reference_code" placeholder="Mã đơn tham chiếu"/>
            </group>
            <group>
              <field name="goods_value"/>
              <field name="allow_view_goods"/>
            </group>
            <group>
              <field name="quantity"/>
              <field name="weight"/>
            </group>
            <group>
              <field name="length"/>
              <field name="width"/>
              <field name="height"/>
              <field name="convert_weight"/>
            </group>
          </group>

          <group string="Dịch vụ vận chuyển" name="service_group">
            <group>
              <field name="shipping_service_id"
                options="{'no_create': True, 'no_open': True}"
                required="1"/>
              <field name="base_shipping_cost" readonly="1"/>
            </group>
            <group>
              <field name="shipping_service_estimated_time" readonly="1"/>
            </group>
          </group>

          <group string="Dịch vụ cộng thêm" name="additional_service_group">
            <field name="goods_type" required="1"/>
            <field name="additional_service_ids" nolabel="1" widget="many2many_checkboxes" options="{'no_create': True}"/>
            <field name="additional_cost" readonly="1"/>
          </group>

          <group string="Thông tin cước phí" name="fee_group">
            <group>
              <field name="receiver_pay_fee"/>
              <field name="cod_amount"/>
              <field name="pickup_at_office"/>
            </group>
            <group>
              <field name="shipping_notes"/>
              <field name="sender_pay_fee" readonly="1"/>
              <field name="total_shipping_fee" readonly="1"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- List View for Shipping Orders -->
  <record id="view_shipping_order_list" model="ir.ui.view">
    <field name="name">shipping.order.list</field>
    <field name="model">shipping.order</field>
    <field name="arch" type="xml">
      <list string="Danh sách phiếu gửi hàng">
        <field name="name"/>
        <field name="sender_name"/>
        <field name="sender_phone"/>
        <field name="receiver_name"/>
        <field name="receiver_phone"/>
        <field name="receiver_city"/>
        <field name="total_shipping_fee"/>
        <field name="state"/>
      </list>
    </field>
  </record>

  <!-- Search View for Shipping Orders -->
  <record id="view_shipping_order_search" model="ir.ui.view">
    <field name="name">shipping.order.search</field>
    <field name="model">shipping.order</field>
    <field name="arch" type="xml">
      <search string="Tìm kiếm phiếu gửi hàng">
        <field name="name" string="Số phiếu"/>
        <field name="sender_name" string="Người gửi"/>
        <field name="sender_phone" string="SĐT người gửi"/>
        <field name="receiver_name" string="Người nhận"/>
        <field name="receiver_phone" string="SĐT người nhận"/>
        <field name="receiver_city" string="Thành phố"/>

        <filter string="Phiếu gửi hàng" name="is_shipping"
          domain="[('is_shipping_order', '=', True)]"/>
        <filter string="Nháp" name="draft"
          domain="[('state', '=', 'draft')]"/>
        <filter string="Đã gửi" name="sent"
          domain="[('state', '=', 'sent')]"/>

        <group expand="0" string="Nhóm theo">
          <filter string="Trạng thái" name="group_state"
            context="{'group_by': 'state'}"/>
          <filter string="Thành phố" name="group_city"
            context="{'group_by': 'receiver_city'}"/>
          <filter string="Dịch vụ vận chuyển" name="group_service"
            context="{'group_by': 'shipping_service_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Action: Create Shipping Order -->
  <record id="action_hdi_sale_order" model="ir.actions.act_window">
    <field name="name">Phiếu gửi hàng</field>
    <field name="res_model">shipping.order</field>
    <field name="view_mode">list,form</field>
    <field name="view_ids" eval="[(5, 0, 0),
                                    (0, 0, {'view_mode': 'list', 'view_id': ref('view_shipping_order_list')}),
                                    (0, 0, {'view_mode': 'form', 'view_id': ref('view_shipping_order_form')})]"/>
    <field name="context">{}</field>
    <field name="domain">[]</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Tạo phiếu gửi hàng mới
      </p>
      <p>
        Nhấn nút "Tạo" để tạo phiếu gửi hàng mới
      </p>
    </field>
  </record>

  <!-- Action: Shipping Services -->
  <record id="action_shipping_service" model="ir.actions.act_window">
    <field name="name">Dịch vụ vận chuyển</field>
    <field name="res_model">shipping.service</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Quản lý dịch vụ vận chuyển
      </p>
      <p>
        Tạo và quản lý các dịch vụ vận chuyển có sẵn
      </p>
    </field>
  </record>
</odoo>