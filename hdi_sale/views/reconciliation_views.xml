<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipping_order_reconciliation_form" model="ir.ui.view">
        <field name="name">Đối soát Công nợ</field>
        <field name="model">shipping.order.reconciliation</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <p>Chọn khoảng thời gian để tìm kiếm danh sách đơn hàng theo trạng thái thanh toán</p>
                    </div>

                    <group>
                        <group string="Bộ lọc thời gian">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Thông tin">
                            <field name="user_id"/>
                            <field name="payment_status"/>
                        </group>
                    </group>

                    <!-- Hidden fields for visibility computation -->
                    <field name="total_orders" invisible="1"/>
                    <field name="hide_no_data_alert" invisible="1"/>
                    <field name="hide_export_button" invisible="1"/>

                    <!-- Statistics Section -->
                    <group string="Thống kê kết quả" invisible="hide_no_data_alert">
                        <field name="total_orders" string="Tổng đơn hàng" readonly="1"/>
                        <field name="total_amount" string="Tổng tiền (VND)" readonly="1"/>
                        <field name="total_paid" string="Tiền đã trả (VND)" readonly="1"/>
                        <field name="total_unpaid" string="Tiền còn lại (VND)" readonly="1"/>
                    </group>

                    <div class="alert alert-secondary" role="alert" invisible="hide_no_data_alert">
                        <p>Chưa có dữ liệu. Vui lòng thay đổi bộ lọc và tìm kiếm lại.</p>
                    </div>
                </sheet>

                <footer>
                    <button name="action_refresh_data" type="object" string="Tìm kiếm" class="btn-primary"/>
                    <button name="action_view_details" type="object" string="Xem danh sách chi tiết" class="btn-secondary" invisible="hide_no_data_alert"/>
                    <button name="action_export_reconciliation" type="object" string="Xuất Excel" class="btn-secondary" invisible="hide_export_button"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- List view for reconciliation lines (Odoo 18: use <list> instead of <tree>) -->
    <record id="view_reconciliation_line_list" model="ir.ui.view">
        <field name="name">Danh sách Đối soát Công nợ</field>
        <field name="model">shipping.order.reconciliation.line</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list create="false" delete="false" edit="false">
                <field name="order_code"/>
                <field name="sender_name"/>
                <field name="receiver_name"/>
                <field name="receiver_phone"/>
                <field name="total_shipping_fee"/>
                <field name="paid_amount"/>
                <field name="unpaid_amount"/>
                <field name="payment_status"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>
    
    <!-- ====== ACTIONS FOR THREE RECONCILIATION TYPES ====== -->
    <record id="action_reconciliation_paid" model="ir.actions.act_window">
        <field name="name">Đối soát Công nợ - Đã trả tiền</field>
        <field name="res_model">shipping.order.reconciliation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shipping_order_reconciliation_form"/>
        <field name="target">new</field>
        <field name="context">{
            'default_payment_status': 'paid',
            'form_view_initial_mode': 'view'
        }</field>
    </record>

    <!-- Action: Chờ trả tiền -->
    <record id="action_reconciliation_waiting" model="ir.actions.act_window">
        <field name="name">Đối soát Công nợ - Chờ trả tiền</field>
        <field name="res_model">shipping.order.reconciliation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shipping_order_reconciliation_form"/>
        <field name="target">new</field>
        <field name="context">{
            'default_payment_status': 'waiting_payment',
            'form_view_initial_mode': 'view'
        }</field>
    </record>

    <!-- Action: Chưa trả tiền -->
    <record id="action_reconciliation_unpaid" model="ir.actions.act_window">
        <field name="name">Đối soát Công nợ - Chưa trả tiền</field>
        <field name="res_model">shipping.order.reconciliation</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_shipping_order_reconciliation_form"/>
        <field name="target">new</field>
        <field name="context">{
            'default_payment_status': 'unpaid',
            'form_view_initial_mode': 'view'
        }</field>
    </record>

    <record id="view_shipping_order_form_payment" model="ir.ui.view">
        <field name="name">Shipping Order - Payment Tab</field>
        <field name="model">shipping.order</field>
        <field name="inherit_id" ref="hdi_sale.view_shipping_order_form"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group string="Thanh toán / Đối soát" name="payment_group">
                    <group>
                        <field name="payment_status"/>
                        <field name="payment_date"/>
                        <field name="payment_deadline"/>
                    </group>
                    <group>
                        <field name="paid_amount"/>
                        <field name="payment_note"/>
                        <field name="invoice_code"/>
                    </group>
                </group>
            </sheet>
        </field>
    </record>

    <record id="view_shipping_order_search_payment" model="ir.ui.view">
        <field name="name">Shipping Order - Payment Search</field>
        <field name="model">shipping.order</field>
        <field name="inherit_id" ref="hdi_sale.view_shipping_order_search"/>
        <field name="arch" type="xml">
            <search position="inside">
                <filter name="filter_paid" string="Đã trả tiền" domain="[('payment_status', '=', 'paid')]"/>
                <filter name="filter_waiting" string="Chờ trả tiền" domain="[('payment_status', '=', 'waiting_payment')]"/>
                <filter name="filter_unpaid" string="Chưa trả tiền" domain="[('payment_status', '=', 'unpaid')]"/>
                <separator/>
            </search>
        </field>
    </record>
</odoo>