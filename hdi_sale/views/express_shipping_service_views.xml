<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Shipping Service List View -->
  <record id="view_shipping_service_list" model="ir.ui.view">
    <field name="name">shipping.service.list</field>
    <field name="model">shipping.service</field>
    <field name="arch" type="xml">
      <list string="Dịch vụ vận chuyển">
        <field name="name"/>
        <field name="code"/>
        <field name="service_type"/>
        <field name="base_price"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Shipping Service Form View -->
  <record id="view_shipping_service_form" model="ir.ui.view">
    <field name="name">shipping.service.form</field>
    <field name="model">shipping.service</field>
    <field name="arch" type="xml">
      <form string="Dịch vụ vận chuyển">
        <sheet>
          <group>
            <group>
              <field name="name" required="1"/>
              <field name="code" required="1"/>
            </group>
            <group>
              <field name="service_type" required="1"/>
              <field name="active"/>
            </group>
          </group>
          <group>
            <field name="base_price" required="1"/>
            <field name="estimated_time" invisible="service_type != 'main'"/>
          </group>
          <group string="Mô tả">
            <field name="description" nolabel="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search View -->
  <record id="view_shipping_service_search" model="ir.ui.view">
    <field name="name">shipping.service.search</field>
    <field name="model">shipping.service</field>
    <field name="arch" type="xml">
      <search string="Tìm kiếm dịch vụ vận chuyển">
        <field name="name"/>
        <field name="code"/>
        <filter string="Dịch vụ chính" name="main_service" domain="[('service_type', '=', 'main')]"/>
        <filter string="Dịch vụ cộng thêm" name="additional_service" domain="[('service_type', '=', 'additional')]"/>
        <filter string="Đang hoạt động" name="active" domain="[('active', '=', True)]"/>
        <filter string="Không hoạt động" name="inactive" domain="[('active', '=', False)]"/>
        <group expand="0" string="Nhóm theo">
          <filter string="Loại dịch vụ" name="group_type" context="{'group_by': 'service_type'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Actions -->
  <record id="action_shipping_service" model="ir.actions.act_window">
    <field name="name">Dịch vụ vận chuyển</field>
    <field name="res_model">shipping.service</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_main_shipping_service" model="ir.actions.act_window">
    <field name="name">Dịch vụ vận chuyển</field>
    <field name="res_model">shipping.service</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('service_type', '=', 'main')]</field>
    <field name="context">{'default_service_type': 'main'}</field>
  </record>

  <record id="action_additional_shipping_service" model="ir.actions.act_window">
    <field name="name">Dịch vụ cộng thêm</field>
    <field name="res_model">shipping.service</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('service_type', '=', 'additional')]</field>
    <field name="context">{'default_service_type': 'additional'}</field>
  </record>
</odoo>
