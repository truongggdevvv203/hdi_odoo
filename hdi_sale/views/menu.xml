<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Add action to existing Sales menu -->
  <menuitem id="hdi_express"
            name="Express"
            parent="sale.sale_menu_root"
            sequence="5"/>

    <menuitem id="sale_order_hdi_create"
            name="Tạo phiếu gửi hàng"
            parent="hdi_express"
            action="hdi_sale.action_hdi_sale_order"
            sequence="10"/>

    <!-- Configuration Menu -->
    <menuitem id="hdi_express_config"
            name="Cài đặt"
            parent="hdi_express"
            sequence="20"/>

        <menuitem id="hdi_shipping_services"
                name="Dịch vụ vận chuyển"
                parent="hdi_express_config"
                action="hdi_sale.action_shipping_service"
                sequence="10"/>

        <menuitem id="hdi_main_shipping_services"
                name="Dịch vụ chính"
                parent="hdi_express_config"
                action="hdi_sale.action_main_shipping_service"
                sequence="15"/>

        <menuitem id="hdi_additional_shipping_services"
                name="Dịch vụ cộng thêm"
                parent="hdi_express_config"
                action="hdi_sale.action_additional_shipping_service"
                sequence="20"/>
</odoo>