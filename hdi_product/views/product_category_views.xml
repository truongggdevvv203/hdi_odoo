<odoo>
    <record id="hdi_product_category_list" model="ir.ui.view">
        <field name="name">hdi.product.category.list</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="parent_id"/>
            </list>
        </field>
    </record>

    <record id="hdi_product_category_form" model="ir.ui.view">
        <field name="name">hdi.product.category.form</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parent_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hdi_product_category_action" model="ir.actions.act_window">
        <field name="name">Danh mục sản phẩm</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
