<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_hdi_product_category_list" model="ir.ui.view">
    <field name="name">hdi.product.category.list</field>
    <field name="model">product.category</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="parent_id"/>
        <field name="hdi_description"/>
      </list>
    </field>
  </record>

  <record id="view_hdi_product_category_form" model="ir.ui.view">
    <field name="name">hdi.product.category.form</field>
    <field name="model">product.category</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="parent_id"/>
            <field name="hdi_description"/>
          </group>
          <group>
            <field name="image_1920"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
