<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_hdi_product_type_tree" model="ir.ui.view">
    <field name="name">hdi.product.type.list</field>
    <field name="model">hdi.product.type</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_hdi_product_type_form" model="ir.ui.view">
    <field name="name">hdi.product.type.form</field>
    <field name="model">hdi.product.type</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_hdi_product_type" model="ir.actions.act_window">
    <field name="name">Loại sản phẩm</field>
    <field name="res_model">hdi.product.type</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
