<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view -->
    <record id="view_sender_config_list" model="ir.ui.view">
        <field name="name">Cấu hình Địa chỉ Gửi Hàng - List</field>
        <field name="model">sender.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="full_address"/>
                <field name="is_default"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_sender_config_form" model="ir.ui.view">
        <field name="name">Cấu hình Địa chỉ Gửi Hàng - Form</field>
        <field name="model">sender.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="is_default"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <group string="Địa chỉ">
                        <group>
                            <field name="district_id" placeholder="VD: Thanh Xuân"/>
                            <field name="ward_id" placeholder="VD: Khương Trung"/>
                        </group>
                        <group>
                            <field name="house_number" placeholder="VD: Số 5"/>
                            <field name="street_name" placeholder="VD: Lý Công Uẩn"/>
                        </group>
                    </group>

                    <group>
                        <field name="full_address" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_sender_config_search" model="ir.ui.view">
        <field name="name">Cấu hình Địa chỉ Gửi Hàng - Search</field>
        <field name="model">sender.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone"/>
                <filter name="active" string="Đang hoạt động" domain="[('active', '=', True)]"/>
                <filter name="archived" string="Đã lưu trữ" domain="[('active', '=', False)]"/>
                <filter name="default" string="Mặc định" domain="[('is_default', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sender_config" model="ir.actions.act_window">
        <field name="name">Địa chỉ Gửi hàng</field>
        <field name="res_model">sender.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sender_config"
        name="Địa chỉ Gửi hàng"
        parent="hdi_express_config"
        action="action_sender_config"
        sequence="5"/>
</odoo>