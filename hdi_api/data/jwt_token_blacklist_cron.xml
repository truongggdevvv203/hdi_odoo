<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled Action để dọn dẹp JWT tokens hết hạn từ blacklist -->
        <record id="jwt_token_blacklist_cleanup_cron" model="ir.cron">
            <field name="name">Cleanup Expired JWT Tokens</field>
            <field name="model_id" ref="model_jwt_token_blacklist"/>
            <field name="state">code</field>
            <field name="code">model._cleanup_expired_tokens()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="True"/>
        </record>
    </data>
</odoo>
