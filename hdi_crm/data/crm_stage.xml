<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Default CRM Stages -->
        <record id="stage_new" model="crm.stage">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="probability">0</field>
        </record>
        
        <record id="stage_qualified" model="crm.stage">
            <field name="name">Qualified</field>
            <field name="sequence">2</field>
            <field name="probability">30</field>
        </record>
        
        <record id="stage_proposal" model="crm.stage">
            <field name="name">Proposal</field>
            <field name="sequence">3</field>
            <field name="probability">60</field>
        </record>
        
        <record id="stage_negotiation" model="crm.stage">
            <field name="name">Negotiation</field>
            <field name="sequence">4</field>
            <field name="probability">80</field>
        </record>
        
        <record id="stage_won" model="crm.stage">
            <field name="name">Won</field>
            <field name="sequence">5</field>
            <field name="probability">100</field>
            <field name="is_won">True</field>
        </record>
        
        <record id="stage_lost" model="crm.stage">
            <field name="name">Lost</field>
            <field name="sequence">6</field>
            <field name="probability">0</field>
            <field name="is_lost">True</field>
        </record>
    </data>
</odoo>
