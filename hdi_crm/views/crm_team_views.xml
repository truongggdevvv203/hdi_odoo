<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CRM Team Tree View -->
        <record id="crm_team_tree" model="ir.ui.view">
            <field name="name">crm.team.tree</field>
            <field name="model">crm.team</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="user_id"/>
                    <field name="active"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- CRM Team Form View -->
        <record id="crm_team_form" model="ir.ui.view">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="company_id"/>
                                <field name="user_id"/>
                                <field name="currency_id"/>
                                <field name="invoiced_target"/>
                            </group>
                            <group>
                                <field name="member_warning"/>
                                <field name="is_membership_multi"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="crm_team_member_ids">
                                    <list>
                                        <field name="user_id"/>
                                        <field name="company_id"/>
                                        <field name="active"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="user_id"/>
                                            <field name="company_id"/>
                                            <field name="active"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Update the action to use the views -->
        <record id="action_crm_team" model="ir.actions.act_window">
            <field name="name">Sales Teams</field>
            <field name="res_model">crm.team</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="crm_team_tree"/>
        </record>
    </data>
</odoo></content>