<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CRM Main Menu -->
        <menuitem id="menu_crm_root" name="CRM" sequence="10" web_icon="hdi_crm,static/description/icon.png"/>
        
        <!-- CRM Leads Menu -->
        <menuitem id="menu_crm_leads" name="Leads" parent="menu_crm_root" sequence="10" action="action_crm_lead"/>
        
        <!-- CRM Opportunities Menu -->
        <menuitem id="menu_crm_opportunities" name="Opportunities" parent="menu_crm_root" sequence="20" action="action_crm_opportunity"/>
        
        <!-- CRM Customers Menu -->
        <menuitem id="menu_crm_customers" name="Customers" parent="menu_crm_root" sequence="30" action="action_crm_customer"/>
        
        <!-- CRM Activities Menu -->
        <menuitem id="menu_crm_activities" name="Activities" parent="menu_crm_root" sequence="40" action="action_crm_activity"/>
        
        <!-- CRM Configuration Menu -->
        <menuitem id="menu_crm_configuration" name="Configuration" parent="menu_crm_root" sequence="100"/>
        
        <!-- CRM Stages -->
        <record id="action_crm_stage" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">crm.stage</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_crm_stage" name="Stages" parent="menu_crm_configuration" sequence="10" action="action_crm_stage"/>
        
        <!-- CRM Tags -->
        <record id="action_crm_tag" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">crm.tag</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_crm_tag" name="Tags" parent="menu_crm_configuration" sequence="20" action="action_crm_tag"/>
        
        <!-- CRM Sources -->
        <record id="action_crm_source" model="ir.actions.act_window">
            <field name="name">Lead Sources</field>
            <field name="res_model">crm.source</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_crm_source" name="Lead Sources" parent="menu_crm_configuration" sequence="30" action="action_crm_source"/>
        
        <!-- CRM Industries -->
        <record id="action_crm_industry" model="ir.actions.act_window">
            <field name="name">Industries</field>
            <field name="res_model">crm.industry</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_crm_industry" name="Industries" parent="menu_crm_configuration" sequence="40" action="action_crm_industry"/>
        
        <!-- CRM Teams -->
        <menuitem id="menu_crm_team" name="Sales Teams" parent="menu_crm_configuration" sequence="50" action="action_crm_team_view"/>
        
        <!-- CRM Lost Reasons -->
        <record id="action_crm_lost_reason" model="ir.actions.act_window">
            <field name="name">Lost Reasons</field>
            <field name="res_model">crm.lost.reason</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_crm_lost_reason" name="Lost Reasons" parent="menu_crm_configuration" sequence="60" action="action_crm_lost_reason"/>
    </data>
</odoo>
