<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CRM Lead Form View -->
        <record id="view_crm_lead_form" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="Lead">
                    <header>
                        <button name="action_convert_to_opportunity" type="object" string="Convert to Opportunity" class="oe_highlight" />
                        <button name="action_mark_as_spam" type="object" string="Mark as Spam" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Lead Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="contact_name"/>
                                <field name="email_from" widget="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="partner_id" options="{'no_open': False, 'no_create': False}"/>
                            </group>
                            <group>
                                <field name="stage_id"/>
                                <field name="probability" widget="percentpie"/>
                                <field name="expected_revenue"/>
                                <field name="date_deadline"/>
                                <field name="priority"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="team_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="source_id"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <field name="description" placeholder="Add internal notes..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- CRM Lead List View -->
        <record id="view_crm_lead_list" model="ir.ui.view">
            <field name="name">crm.lead.list</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <list string="Leads" sample="1">
                    <field name="name"/>
                    <field name="contact_name"/>
                    <field name="email_from"/>
                    <field name="phone"/>
                    <field name="stage_id"/>
                    <field name="user_id"/>
                    <field name="probability"/>
                    <field name="expected_revenue" sum="Expected Revenue"/>
                    <field name="date_deadline"/>
                </list>
            </field>
        </record>

        <!-- CRM Lead Kanban View -->
        <record id="view_crm_lead_kanban" model="ir.ui.view">
            <field name="name">crm.lead.kanban</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="contact_name"/>
                    <field name="email_from"/>
                    <field name="stage_id"/>
                    <field name="priority"/>
                    <field name="expected_revenue"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <strong><field name="name"/></strong>
                                    <div>
                                        <span t-if="record.contact_name.value"><field name="contact_name"/></span>
                                    </div>
                                    <div>
                                        <span t-if="record.email_from.value"><field name="email_from"/></span>
                                    </div>
                                    <div class="text-muted">
                                        <field name="expected_revenue" widget="monetary"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- CRM Lead Search View -->
        <record id="view_crm_lead_search" model="ir.ui.view">
            <field name="name">crm.lead.search</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <search string="Search Leads">
                    <field name="name" string="Lead"/>
                    <field name="contact_name"/>
                    <field name="email_from"/>
                    <field name="stage_id"/>
                    <field name="user_id"/>
                    <field name="tag_ids"/>
                    <separator/>
                    <filter name="filter_active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="filter_high_priority" string="High Priority" domain="[('priority', 'in', ['2', '3'])]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_stage" string="Stage" context="{'group_by': 'stage_id'}"/>
                        <filter name="group_user" string="Assigned to" context="{'group_by': 'user_id'}"/>
                        <filter name="group_priority" string="Priority" context="{'group_by': 'priority'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- CRM Lead Action -->
        <record id="action_crm_lead" model="ir.actions.act_window">
            <field name="name">Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_crm_lead_kanban"/>
            <field name="search_view_id" ref="view_crm_lead_search"/>
            <field name="context">{'search_default_filter_active': 1}</field>
        </record>
    </data>
</odoo>
