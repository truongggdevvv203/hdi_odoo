<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Partner Rating List View -->
        <record id="crm_partner_rating_list" model="ir.ui.view">
            <field name="name">crm.partner.rating.list</field>
            <field name="model">crm.partner.rating</field>
            <field name="arch" type="xml">
                <list string="Partner Ratings">
                    <field name="partner_id"/>
                    <field name="rating"/>
                    <field name="rater_id"/>
                    <field name="date_rated"/>
                    <field name="comment"/>
                </list>
            </field>
        </record>

        <!-- Partner Rating Form View -->
        <record id="crm_partner_rating_form" model="ir.ui.view">
            <field name="name">crm.partner.rating.form</field>
            <field name="model">crm.partner.rating</field>
            <field name="arch" type="xml">
                <form string="Partner Rating">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="rating"/>
                            </group>
                            <group>
                                <field name="rater_id"/>
                                <field name="date_rated"/>
                            </group>
                        </group>
                        <group>
                            <field name="comment" placeholder="Add your comments here..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Partner Value List View -->
        <record id="crm_partner_value_list" model="ir.ui.view">
            <field name="name">crm.partner.value.list</field>
            <field name="model">crm.partner.value</field>
            <field name="arch" type="xml">
                <list string="Partner Value">
                    <field name="partner_id"/>
                    <field name="value_category"/>
                    <field name="value"/>
                    <field name="date"/>
                    <field name="recorded_by"/>
                </list>
            </field>
        </record>

        <!-- Partner Value Form View -->
        <record id="crm_partner_value_form" model="ir.ui.view">
            <field name="name">crm.partner.value.form</field>
            <field name="model">crm.partner.value</field>
            <field name="arch" type="xml">
                <form string="Partner Value">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="value_category"/>
                                <field name="value"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="recorded_by"/>
                            </group>
                        </group>
                        <group>
                            <field name="note" placeholder="Add notes..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- CRM Partner Info List View -->
        <record id="crm_partner_info_list" model="ir.ui.view">
            <field name="name">crm.partner.info.list</field>
            <field name="model">crm.partner.info</field>
            <field name="arch" type="xml">
                <list string="CRM Partner Info">
                    <field name="partner_id"/>
                    <field name="partner_type"/>
                    <field name="average_rating"/>
                    <field name="partner_value"/>
                    <field name="credit_risk"/>
                    <field name="last_contact_date"/>
                </list>
            </field>
        </record>

        <!-- CRM Partner Info Form View -->
        <record id="crm_partner_info_form" model="ir.ui.view">
            <field name="name">crm.partner.info.form</field>
            <field name="model">crm.partner.info</field>
            <field name="arch" type="xml">
                <form string="CRM Partner Information">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="partner_id"/>
                            </h1>
                        </div>
                        
                        <notebook>
                            <page string="Partner Info">
                                <group>
                                    <group>
                                        <field name="partner_type"/>
                                        <field name="credit_risk"/>
                                        <field name="preferred_contact_method"/>
                                    </group>
                                    <group>
                                        <field name="customer_since"/>
                                        <field name="last_contact_date"/>
                                        <field name="days_since_contact"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Rating &amp; Value">
                                <group>
                                    <group>
                                        <field name="average_rating"/>
                                        <field name="rating_count"/>
                                    </group>
                                    <group>
                                        <field name="partner_value"/>
                                        <field name="total_spent"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Ratings">
                                <field name="rating_ids" nolabel="1">
                                    <list>
                                        <field name="rating"/>
                                        <field name="rater_id"/>
                                        <field name="date_rated"/>
                                        <field name="comment"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="rating"/>
                                            <field name="rater_id"/>
                                            <field name="date_rated"/>
                                        </group>
                                        <group>
                                            <field name="comment"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            
                            <page string="Value History">
                                <field name="value_tracking_ids" nolabel="1">
                                    <list>
                                        <field name="value_category"/>
                                        <field name="value"/>
                                        <field name="date"/>
                                        <field name="recorded_by"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="value_category"/>
                                            <field name="value"/>
                                            <field name="date"/>
                                            <field name="recorded_by"/>
                                        </group>
                                        <group>
                                            <field name="note"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_record_contact" type="object" class="btn-primary" string="Record Contact"/>
                        <button name="action_add_rating" type="object" class="btn-secondary" string="Add Rating"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- CRM Partner Info Search View -->
        <record id="crm_partner_info_search" model="ir.ui.view">
            <field name="name">crm.partner.info.search</field>
            <field name="model">crm.partner.info</field>
            <field name="arch" type="xml">
                <search string="Search CRM Partner Info">
                    <field name="partner_id"/>
                    <field name="partner_type"/>
                    <field name="credit_risk"/>
                    <separator/>
                    <filter name="filter_customers" string="Customers" domain="[('partner_type', '=', 'customer')]"/>
                    <filter name="filter_prospects" string="Prospects" domain="[('partner_type', '=', 'prospect')]"/>
                    <filter name="filter_high_risk" string="High Risk" domain="[('credit_risk', '=', 'high')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_type" string="Partner Type" context="{'group_by': 'partner_type'}"/>
                        <filter name="group_risk" string="Credit Risk" context="{'group_by': 'credit_risk'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Partner Rating Action -->
        <record id="action_crm_partner_rating" model="ir.actions.act_window">
            <field name="name">Partner Ratings</field>
            <field name="res_model">crm.partner.rating</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Partner Value Action -->
        <record id="action_crm_partner_value" model="ir.actions.act_window">
            <field name="name">Partner Value</field>
            <field name="res_model">crm.partner.value</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- CRM Partner Info Action -->
        <record id="action_crm_partner_info" model="ir.actions.act_window">
            <field name="name">CRM Partner Information</field>
            <field name="res_model">crm.partner.info</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="crm_partner_info_search"/>
        </record>
    </data>
</odoo>
