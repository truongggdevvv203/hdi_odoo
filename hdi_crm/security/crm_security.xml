<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- CRM Security Groups -->
        <record id="group_crm_manager" model="res.groups">
            <field name="name">CRM Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">CRM manager can access and manage all CRM records</field>
        </record>
        
        <record id="group_crm_user" model="res.groups">
            <field name="name">CRM User</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">CRM user can access their own CRM records</field>
        </record>
        
        <!-- Lead Rules -->
        <record id="rule_crm_lead_manager" model="ir.rule">
            <field name="name">CRM Lead Manager Rule</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="groups" eval="[(4, ref('group_crm_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="rule_crm_lead_user" model="ir.rule">
            <field name="name">CRM Lead User Own Records</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="groups" eval="[(4, ref('group_crm_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>
        
        <!-- Opportunity Rules -->
        <record id="rule_crm_opportunity_manager" model="ir.rule">
            <field name="name">CRM Opportunity Manager Rule</field>
            <field name="model_id" ref="model_crm_opportunity"/>
            <field name="groups" eval="[(4, ref('group_crm_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="rule_crm_opportunity_user" model="ir.rule">
            <field name="name">CRM Opportunity User Own Records</field>
            <field name="model_id" ref="model_crm_opportunity"/>
            <field name="groups" eval="[(4, ref('group_crm_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
        </record>
        
    </data>
</odoo>
