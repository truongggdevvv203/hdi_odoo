<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tree View -->
    <record id="view_hr_payslip_tree" model="ir.ui.view">
        <field name="name">hr.payslip.tree</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <list string="Phiếu lương">
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="struct_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_payslip_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Phiếu lương">
                <header>
                    <button name="compute_sheet" string="Tính lương" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_payslip_verify" string="Gửi duyệt" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_payslip_done" string="Duyệt" type="object" class="oe_highlight" invisible="state != 'verify'"/>
                    <button name="action_payslip_paid" string="Đã thanh toán" type="object" class="oe_highlight" invisible="state != 'done'"/>
                    <button name="action_payslip_draft" string="Chuyển về nháp" type="object" invisible="state not in ('cancel',)"/>
                    <button name="action_payslip_cancel" string="Hủy" type="object" invisible="state not in ('draft', 'verify')"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,verify,done,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="VD: Lương tháng " readonly="state != 'draft'"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="contract_id" readonly="state != 'draft'" context="{'default_employee_id': employee_id}" domain="[('employee_id', '=', employee_id), ('state', 'in', ['open', 'close'])]"/>
                            <field name="struct_id" readonly="state != 'draft' or contract_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="is_probation" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_from" readonly="state != 'draft'"/>
                            <field name="date_to" readonly="state != 'draft'"/>
                            <field name="standard_days" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Lương năng suất">
                            <field name="performance_wage_total" readonly="state != 'draft'" widget="monetary"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Chi tiết lương" name="salary_lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="amount"/>
                                    <field name="total" sum="Tổng cộng"/>
                                </list>
                            </field>
                        </page>
                        <page string="Ngày công">
                            <field name="worked_days_line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="number_of_days"/>
                                    <field name="number_of_hours"/>
                                </list>
                            </field>
                        </page>
                        <page string="Các khoản khác" name="inputs">
                            <field name="input_line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="amount" sum="Tổng"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_payslip_filter" model="ir.ui.view">
        <field name="name">hr.payslip.search</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm phiếu lương">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>

                <filter name="draft" string="Nháp" domain="[('state','=','draft')]"/>
                <filter name="verify" string="Chờ duyệt" domain="[('state','=','verify')]"/>
                <filter name="done" string="Đã duyệt" domain="[('state','=','done')]"/>
                <filter name="paid" string="Đã thanh toán" domain="[('state','=','paid')]"/>

                <separator/>
                <filter name="current_month" string="Tháng này"
                        domain="[('date_from','&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('date_to','&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>

                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_employee" string="Nhân viên" context="{'group_by':'employee_id'}"/>
                    <filter name="group_by_state" string="Trạng thái" context="{'group_by':'state'}"/>
                    <filter name="group_by_month" string="Tháng" context="{'group_by':'date_from'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hr_payslip" model="ir.actions.act_window">
        <field name="name">Phiếu lương</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_hr_payslip_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có phiếu lương nào
            </p>
            <p>
                Nhấn nút <b>Mới</b> để tạo phiếu lương mới
            </p>
        </field>
    </record>
</odoo>