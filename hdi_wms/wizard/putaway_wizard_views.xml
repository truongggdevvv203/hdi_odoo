<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Putaway Wizard -->
    <record id="view_putaway_wizard_form" model="ir.ui.view">
        <field name="name">hdi.putaway.wizard.form</field>
        <field name="model">hdi.putaway.wizard</field>
        <field name="arch" type="xml">
            <form string="Gợi ý vị trí lưu kho">
                <group>
                    <field name="batch_id" readonly="1" string="Lô hàng"/>
                    <field name="product_id" string="Sản phẩm"/>
                    <field name="quantity" string="Số lượng"/>
                </group>
                <group>
                    <button name="action_generate_suggestions" string="Tạo gợi ý"
                            type="object" class="btn-primary"/>
                </group>
                <group string="Vị trí được chọn">
                    <field name="selected_location_id" string="Vị trí"/>
                </group>
                <footer>
                    <button name="action_confirm_location" string="Xác nhận"
                            type="object" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
