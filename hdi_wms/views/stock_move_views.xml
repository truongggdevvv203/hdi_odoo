<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ✅ INHERIT stock.move tree - KHÔNG tạo mới -->
    <record id="view_move_tree_wms" model="ir.ui.view">
        <field name="name">stock.move.tree.wms</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="batch_id" optional="show" groups="hdi_wms.group_wms_user"/>
            </field>
        </field>
    </record>

    <!-- ✅ INHERIT stock.move form -->
    <record id="view_move_form_wms" model="ir.ui.view">
        <field name="name">stock.move.form.wms</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="batch_id" groups="hdi_wms.group_wms_user"/>
                <field name="loose_line_id" groups="hdi_wms.group_wms_user"/>
            </field>
        </field>
    </record>

</odoo>
