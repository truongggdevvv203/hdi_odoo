<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Sender Address List View -->
  <record id="view_sender_address_list" model="ir.ui.view">
    <field name="name">sender.address.list</field>
    <field name="model">sender.address</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="phone"/>
        <field name="city"/>
        <field name="is_default"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Sender Address Form View -->
  <record id="view_sender_address_form" model="ir.ui.view">
    <field name="name">sender.address.form</field>
    <field name="model">sender.address</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group string="Thông tin cơ bản" name="basic_group">
            <field name="name"/>
            <field name="phone"/>
            <field name="email"/>
          </group>

          <group string="Địa chỉ" name="address_group">
            <field name="street"/>
            <field name="street2"/>
            <field name="city"/>
            <field name="state_id"/>
            <field name="zip"/>
            <field name="country_id"/>
          </group>

          <group string="Cài đặt" name="settings_group">
            <field name="is_default"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Sender Address Action -->
  <record id="action_sender_address" model="ir.actions.act_window">
    <field name="name">Địa chỉ gửi hàng</field>
    <field name="res_model">sender.address</field>
    <field name="view_mode">list,form</field>
    <field name="context">{'default_user_id': uid}</field>
  </record>
</odoo>
