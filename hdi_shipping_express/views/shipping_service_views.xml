<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Shipping Service List View -->
  <record id="view_shipping_service_list" model="ir.ui.view">
    <field name="name">shipping.service.list</field>
    <field name="model">shipping.service</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="base_price"/>
        <field name="estimated_days"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- Shipping Service Form View -->
  <record id="view_shipping_service_form" model="ir.ui.view">
    <field name="name">shipping.service.form</field>
    <field name="model">shipping.service</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="base_price"/>
            <field name="estimated_days"/>
            <field name="active"/>
          </group>
          <group>
            <field name="description" nolabel="1" colspan="4"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Shipping Service Action -->
  <record id="action_shipping_service" model="ir.actions.act_window">
    <field name="name">Dịch vụ vận chuyển</field>
    <field name="res_model">shipping.service</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
