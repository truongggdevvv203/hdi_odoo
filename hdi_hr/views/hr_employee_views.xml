<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Employee Form View Extensions -->
    <record id="view_employee_form_hdi_hr" model="ir.ui.view">
        <field name="name">HR Employee - HDI Extensions</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add tabs for additional information -->
            <xpath expr="//notebook" position="inside">
                <!-- Employment Information Tab -->
                <page string="Thông tin Công việc">
                    <group>
                        <group>
                            <field name="start_work_date"/>
                            <field name="seniority_text" readonly="1"/>
                        </group>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
</odoo>
