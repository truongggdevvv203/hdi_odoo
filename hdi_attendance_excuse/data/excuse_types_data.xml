<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Excuse Types -->
    <record id="excuse_type_late_arrival" model="attendance.excuse.type">
        <field name="name">Đi muộn</field>
        <field name="code">LATE</field>
        <field name="category">late</field>
        <field name="sequence">10</field>
        <field name="description">Nhân viên đến nơi làm việc muộn hơn giờ quy định</field>
        <field name="require_evidence">False</field>
    </record>

    <record id="excuse_type_early_departure" model="attendance.excuse.type">
        <field name="name">Về sớm</field>
        <field name="code">EARLY</field>
        <field name="category">early</field>
        <field name="sequence">20</field>
        <field name="description">Nhân viên về nơi ở sớm hơn giờ quy định</field>
        <field name="require_evidence">False</field>
    </record>

    <record id="excuse_type_missing_checkin" model="attendance.excuse.type">
        <field name="name">Quên check-in</field>
        <field name="code">MISSING_IN</field>
        <field name="category">missing_checkin</field>
        <field name="sequence">30</field>
        <field name="description">Nhân viên quên check-in khi đến nơi làm việc</field>
        <field name="require_evidence">True</field>
    </record>

    <record id="excuse_type_missing_checkout" model="attendance.excuse.type">
        <field name="name">Quên check-out</field>
        <field name="code">MISSING_OUT</field>
        <field name="category">missing_checkout</field>
        <field name="sequence">40</field>
        <field name="description">Nhân viên quên check-out khi rời nơi làm việc</field>
        <field name="require_evidence">True</field>
    </record>

    <record id="excuse_type_wrong_time" model="attendance.excuse.type">
        <field name="name">Sai giờ check-in/out</field>
        <field name="code">WRONG_TIME</field>
        <field name="category">wrong_time</field>
        <field name="sequence">50</field>
        <field name="description">Giờ check-in/out bị sai, cần sửa lại</field>
        <field name="require_evidence">True</field>
    </record>

    <record id="excuse_type_other" model="attendance.excuse.type">
        <field name="name">Trường hợp khác</field>
        <field name="code">OTHER</field>
        <field name="category">other</field>
        <field name="sequence">60</field>
        <field name="description">Các trường hợp bất thường khác liên quan đến chấm công</field>
        <field name="require_evidence">True</field>
    </record>
</odoo>