<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job: Auto checkout at midnight (23:59) -->
    <record id="ir_cron_auto_checkout_midnight" model="ir.cron">
        <field name="name">Tự động check-out vào 23:59</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.auto_checkout_at_midnight()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="nextcall">2025-12-25 23:59:00</field>
        <field name="user_id" ref="base.user_admin"/>
    </record>

    <!-- Cron Job: Auto-create missing checkout excuses daily -->
    <record id="ir_cron_create_missing_checkout_excuses" model="ir.cron">
        <field name="name">Tạo giải trình quên check-out hàng ngày</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.create_missing_checkout_excuses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="nextcall">2025-12-25 00:05:00</field>
        <field name="user_id" ref="base.user_admin"/>
    </record>
</odoo>
