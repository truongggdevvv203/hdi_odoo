<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job: Auto-create missing checkout excuses daily -->
    <record id="ir_cron_create_missing_checkout_excuses" model="ir.cron">
        <field name="name">Tạo giải trình quên check-out hàng ngày</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="state">code</field>
        <field name="code">model.create_missing_checkout_excuses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="nextcall">2025-12-12 00:00:00</field>
        <field name="user_id" ref="base.user_admin"/>
    </record>
</odoo>
