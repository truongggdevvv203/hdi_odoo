<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Excuse Request Views -->
    <record id="view_attendance_excuse_request_list" model="ir.ui.view">
        <field name="name">Yêu cầu giải trình - List</field>
        <field name="model">attendance.excuse.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="excuse_type_id"/>
                <field name="reason"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_attendance_excuse_request_form" model="ir.ui.view">
        <field name="name">Yêu cầu giải trình - Form</field>
        <field name="model">attendance.excuse.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="submit" string="Gửi yêu cầu" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="approve" string="Phê duyệt" type="object" invisible="state != 'submitted'" class="btn-primary"/>
                    <button name="reject" string="Từ chối" type="object" invisible="state != 'submitted'" class="btn-danger"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date"/>
                            <field name="excuse_type_id"/>
                        </group>
                        <group>
                            <field name="approver_id"/>
                            <field name="approval_date"/>
                        </group>
                    </group>
                    <separator string="Lý do giải trình"/>
                    <field name="reason"/>
                    <separator string="Bằng chứng minh chứng"/>
                    <field name="evidence_attachment"/>
                    <separator string="Yêu cầu sửa chữa (nếu có)"/>
                    <group>
                        <group>
                            <field name="requested_checkin"/>
                        </group>
                        <group>
                            <field name="requested_checkout"/>
                        </group>
                    </group>
                    <separator string="Lý do từ chối"/>
                    <field name="rejection_reason" invisible="state != 'rejected'"/>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_excuse_request" model="ir.actions.act_window">
        <field name="name">Yêu cầu giải trình chấm công</field>
        <field name="res_model">attendance.excuse.request</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>