<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== Attendance Excuse Views ==================== -->
    <!-- List View -->
    <record id="view_attendance_excuse_list" model="ir.ui.view">
        <field name="name">Giải trình chấm công - List</field>
        <field name="model">attendance.excuse</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="date"/>
                <field name="excuse_type"/>
                <field name="state"/>
                <field name="late_minutes" optional="show"/>
                <field name="early_minutes" optional="show"/>
                <field name="approver_id" optional="show"/>
                <field name="approval_date" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_attendance_excuse_form" model="ir.ui.view">
        <field name="name">Giải trình chấm công - Form</field>
        <field name="model">attendance.excuse</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Gửi yêu cầu" type="object" class="btn-primary"
                            invisible="state != 'pending'"/>
                    <button name="action_approve" string="Phê duyệt" type="object" class="btn-success"
                            invisible="not can_approve"/>
                    <button name="action_reject" string="Từ chối" type="object" class="btn-danger"
                            invisible="not can_reject"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <h2>
                        <field name="display_name" readonly="1"/>
                    </h2>
                    <group>
                        <group>
                            <field name="attendance_id" required="1"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="excuse_type"/>
                        </group>
                        <group>
                            <field name="late_minutes" invisible="late_minutes == 0"/>
                            <field name="early_minutes" invisible="early_minutes == 0"/>
                        </group>
                    </group>
                    <group>
                        <group string="Thời gian gốc">
                            <field name="original_checkin" readonly="1"/>
                            <field name="original_checkout" readonly="1"/>
                        </group>
                        <group string="Thời gian đã sửa" invisible="not corrected_checkin and not corrected_checkout">
                            <field name="corrected_checkin"/>
                            <field name="corrected_checkout"/>
                        </group>
                    </group>

                    <!-- Requested Corrections - hiển thị dựa trên loại giải trình -->
                    <!-- Nếu late: chỉnh sửa check-in, check-out readonly -->
                    <group string="Giờ yêu cầu sửa" invisible="excuse_type != 'late'">
                        <group>
                            <field name="requested_checkin"/>
                            <field name="requested_checkout" readonly="1"/>
                        </group>
                    </group>

                    <!-- Nếu early: check-in readonly, chỉnh sửa check-out -->
                    <group string="Giờ yêu cầu sửa" invisible="excuse_type != 'early'">
                        <group>
                            <field name="requested_checkin" readonly="1"/>
                            <field name="requested_checkout"/>
                        </group>
                    </group>

                    <!-- Nếu missing_checkout: check-in readonly, chỉnh sửa check-out -->
                    <group string="Giờ yêu cầu sửa" invisible="excuse_type != 'missing_checkout'">
                        <group>
                            <field name="requested_checkin" readonly="1"/>
                            <field name="requested_checkout"/>
                        </group>
                    </group>

                    <!-- Reason and Evidence -->
                    <separator string="Chi tiết yêu cầu"/>
                    <group>
                        <field name="reason" colspan="2"/>
                    </group>

                    <!-- Approval Info -->
                    <group string="Thông tin phê duyệt" invisible="state == 'pending'">
                        <group>
                            <field name="approver_id" readonly="1"/>
                            <field name="approval_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="rejection_reason" invisible="state != 'rejected'" colspan="2"/>
                        </group>
                    </group>

                    <!-- Notes -->
                    <field name="notes" colspan="2"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_attendance_excuse" model="ir.actions.act_window">
        <field name="name">Giải trình chấm công</field>
        <field name="res_model">attendance.excuse</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>