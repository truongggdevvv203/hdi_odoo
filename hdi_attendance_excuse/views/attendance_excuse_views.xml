<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Attendance Excuse Type Views -->
    <record id="view_attendance_excuse_type_list" model="ir.ui.view">
        <field name="name">Loại giải trình - List</field>
        <field name="model">attendance.excuse.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="require_evidence"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_attendance_excuse_type_form" model="ir.ui.view">
        <field name="name">Loại giải trình - Form</field>
        <field name="model">attendance.excuse.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                        </group>
                        <group>
                            <field name="require_evidence"/>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <field name="description"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_excuse_type" model="ir.actions.act_window">
        <field name="name">Loại giải trình chấm công</field>
        <field name="res_model">attendance.excuse.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>