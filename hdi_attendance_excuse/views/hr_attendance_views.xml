<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend HR Attendance with Excuse Info -->
    <record id="view_hr_attendance_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.form - Inherit Excuse</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <separator string="Giải trình"/>
                <group>
                    <group>
                        <field name="is_excused"/>
                        <field name="has_pending_excuse"/>
                    </group>
                </group>
                <field name="excuse_ids">
                    <tree>
                        <field name="date"/>
                        <field name="excuse_type_id"/>
                        <field name="status"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>