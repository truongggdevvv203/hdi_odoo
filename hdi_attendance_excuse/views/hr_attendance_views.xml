<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend HR Attendance with Excuse Info -->
    <record id="view_hr_attendance_form_inherit_excuse" model="ir.ui.view">
        <field name="name">hr.attendance - Inherit Excuse Info</field>
        <field name="model">hr.attendance</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="hr_attendance.view_hr_attendance_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <group string="Giải trình chấm công">
                    <field name="is_excused"/>
                    <field name="has_pending_excuse"/>
                </group>
                <field name="excuse_ids" readonly="1">
                    <list>
                        <field name="date"/>
                        <field name="excuse_type_id"/>
                        <field name="status"/>
                    </list>
                </field>
            </xpath>
        </field>
    </record>
</odoo>