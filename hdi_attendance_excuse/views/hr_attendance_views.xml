<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend HR Attendance with Excuse Info -->
    <record id="view_hr_attendance_form_inherit_excuse" model="ir.ui.view">
        <field name="name">hr.attendance - Inherit Excuse Info</field>
        <field name="model">hr.attendance</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_res_partner_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="is_excused"/>
                        <field name="has_pending_excuse"/>
                    </group>
                </group>
                <separator string="Giải trình liên quan"/>
                <field name="excuse_ids" readonly="1">
                    <tree>
                        <field name="date"/>
                        <field name="excuse_type_id"/>
                        <field name="status"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
</odoo>